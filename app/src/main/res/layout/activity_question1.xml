<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.digitalscale.activity.Question1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_header_questions"
            android:background="@drawable/head_home1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbl_how_you_are_active"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/txt_size_main_title"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llQuestion1Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGry"
            android:gravity="center"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/btnQuestion1Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorOrange"
            android:gravity="center"
            android:text="@string/btn_lbl_next"
            android:textSize="@dimen/txt_size_title"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</ScrollView>
